@model IEnumerable<InfoPC.Models.InfoPC.Ordinateur>

@{
    ViewData["Title"] = "PcAndTheirMarque";
}
<style>
    .table {
        border-collapse: collapse;
        width: 100%;
    }

        .table th,
        .table td {
            padding: 0.75rem;
            text-align: left;
            vertical-align: top;
            border-top: 1px solid #dee2e6;
        }

        .table th {
            font-weight: bold;
            background-color: #f8f9fa;
        }

        .table td {
            border-bottom: 1px solid #dee2e6;
        }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f2f2f2;
    }

</style>
<h1>Pc And Their Marque</h1>

<p>
    <a asp-action="Create">Create New Pc</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prix)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Marque.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Marque)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prix) 
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Marque.Id)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Marque.Name)
                </td>
                <td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
        </tr>
}
    </tbody>
</table>
